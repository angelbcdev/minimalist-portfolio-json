---
import Section from "../Section.astro";
import { experienceDeveloper } from "cv.json";
---

<Section class="flex flex-col gap-8" title="Developer's experience ">
  {
    experienceDeveloper.map(({ title, url, summary }) => (
      <div class="flex flex-col mt-6 gap-4">
        <a
          href={url}
          target="_blank"
          class="hover:underline text-xl font-semibold"
        >
          <p>{title}</p>
        </a>
        <p>{summary}</p>
      </div>
    ))
  }
  <div class="flex flex-col gap-4"></div>
</Section>
