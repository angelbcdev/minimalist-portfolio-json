---
export interface Props {
  allImg: string[];
}

const { allImg } = Astro.props;
---

<section class="show-Area">
  <div class="container">
    <ul class="slider">
      {
        allImg.map((image, indx) => (
          <li class="" id={"slide" + (indx + 1)}>
            <img class=" px-5 object-fit object-top" src={image} alt="" />
          </li>
        ))
      }
    </ul>

    <ul class="menu">
      {
        allImg.map((image, indx) => (
          <li>
            <a href={"#slide" + (indx + 1)}>{indx + 1}</a>
          </li>
        ))
      }
    </ul>
  </div>
</section>

<style>
  .show-Area {
    font-family: sans-serif;
  }

  .container {
    margin: auto;

    width: 100%;

    padding: 0px;
  }

  ul,
  li {
    padding: 0;
    margin: 0;
    list-style: none;
  }

  ul.slider {
    position: relative;

    width: 800px;
    height: 450px;
  }

  ul.slider li {
    position: absolute;
    left: 0px;
    top: 0px;
    opacity: 0;
    width: inherit;
    height: inherit;
    transition: opacity 0.5s;
    background: rgb(75, 74, 74);
  }

  ul.slider li img {
    width: 100%;
    height: 450px;
    object-fit: cover;
  }

  ul.slider li:first-child {
    opacity: 1; /*Mostramos el primer <li>*/
  }

  ul.slider li:target {
    opacity: 1; /*Mostramos el <li> del enlace que pulsemos*/
  }

  .menu {
    text-align: center;
    margin: 20px;
    display: flex;
    flex-direction: row;
    gap: 12px;
    justify-content: center;
  }

  .menu li {
    display: inline-block;
    text-align: center;
  }

  .menu li a {
    display: flex;
    justify-content: center;

    position: relative;
    top: 0;
    color: white;
    text-decoration: none;
    background-color: grey;
    padding: 1px;
    padding-left: 4px;
    padding-right: 4px;
    width: 20px;
    height: 20px;
    font-size: 12px;
    border-radius: 100%;
  }
</style>
